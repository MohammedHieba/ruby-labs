<h1>Listing Of Articles</h1>

<%= button_to "New Article", new_article_path , :method=> :get, class: 'btn btn-block btn-outline-primary' %>
<br>
<table class="table table-hover table-light">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Actions</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-outline-dark' %>
        <%= link_to 'Edit', edit_article_path(article) , class: 'btn btn-outline-info' %>
        <%= link_to 'Destroy', article_path(article), method: :delete , data: { confirm: 'you are about delete this article.. 
                    Are you sure?!' },class: 'btn btn-outline-danger' %></td>

    </tr>
  <% end %>
</table>